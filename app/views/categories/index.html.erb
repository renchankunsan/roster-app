<h2>カテゴリ設定</h2>

<%= form_tag("/categories/create") do %>
    <div class="form-group">
        <%= label_tag "form-category", "カテゴリ" %>
        <div class="form-inline">
            <%= text_field :categories, :name, class:"form-control" %><%= submit_tag "作成", class:"btn btn-primary" %>
        </div>
    </div>
<% end %>

<h3>一覧</h3>
<table class="table table-bordered">
    <tr>
        <th>カテゴリ</th>
        <th>削除</th>
    </tr>
    <% @categories.each do |category| %>
    <tr>
        <td><%= category.name %></td>
        <td><%= link_to "削除", "/categories/"+category.id.to_s, :method => :delete %></td>
    </tr>
    <% end %>
</table>
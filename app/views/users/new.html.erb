<h3>新規登録</h3>

<%= form_tag("/users/create") do %>
    <div class="form-group">
        <%= label_tag "form-name", "氏名" %>
        <%= text_field :users, :name, id:"form-name", class:"form-control" ,placeholder:"氏名(姓名の間は空けないでください)" %>
    </div>
    <div class="form-group">
        <%= label_tag "form-email", "メールアドレス" %>
        <%= email_field :user, :email, id:"form-email", class:"form-control" ,placeholder:"メールアドレス(IDになります)" %>
    </div>
    <div class="form-group">
        <%= label_tag :password, "パスワード" %>
        <%= password_field_tag :password %>
    </div>
    <div class="form-group">
        <%= label_tag :password_confirmation, "パスワード(確認)" %>
        <%= password_field_tag :password %>
    </div>
    <%= submit_tag "登録", class:"btn btn-primary" %>
<% end %>

<a href="/users/login"><h3>ログイン</h3></a>